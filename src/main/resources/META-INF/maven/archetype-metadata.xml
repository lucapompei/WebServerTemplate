<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="WebTemplate">
	<requiredProperties>
		<requiredProperty key="javaVersion">
			<!-- <defaultValue>17</defaultValue> -->
		</requiredProperty>
		<requiredProperty key="withCache">
			<!-- <defaultValue>Y</defaultValue> -->
		</requiredProperty>
		<requiredProperty key="withSecurity">
			<!-- <defaultValue>Y</defaultValue> -->
		</requiredProperty>
		<requiredProperty key="withKubernetes">
			<!-- <defaultValue>Y</defaultValue> -->
		</requiredProperty>
		<requiredProperty key="withSystemDemon">
			<!-- <defaultValue>Y</defaultValue> -->
		</requiredProperty>
		<requiredProperty key="withMattermost">
			<!-- <defaultValue>Y</defaultValue> -->
		</requiredProperty>
		<requiredProperty key="withGoogleChat">
			<!-- <defaultValue>Y</defaultValue> -->
		</requiredProperty>
	</requiredProperties>
	<fileSets>
		<fileSet filtered="true" packaged="true" encoding="UTF-8">
			<directory>src/main/java</directory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/main/resources</directory>
			<includes>
				<include>**/*.sql</include>
				<include>**/*.yml</include>
				<include>**/*.yaml</include>
				<include>**/*.properties</include>
				<include>**/*.xml</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" packaged="true" encoding="UTF-8">
			<directory>src/test/java</directory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/test/resources</directory>
			<includes>
				<include>**/*.sql</include>
				<include>**/*.yml</include>
				<include>**/*.yaml</include>
				<include>**/*.properties</include>
				<include>**/*.xml</include>
			</includes>
		</fileSet>
		<fileSet encoding="UTF-8">
			<directory>src/test/resources</directory>
			<includes>
				<include>**/*.jmx</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>configs</directory>
			<includes>
				<include>*.yml</include>
				<include>env/*.env</include>
			</includes>
		</fileSet>
		<fileSet encoding="UTF-8">
			<directory>configs</directory>
			<includes>
				<include>*.sh</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory/>
			<includes>
				<include>LICENSE</include>
				<include>*.service</include>
				<include>Dockerfile</include>
				<include>README.md</include>
				<include>Jenkinsfile</include>
				<include>*.yml</include>
				<include>*.yaml</include>
				<include>*.properties</include>
				<include>*.gitignore</include>
				<include>pom.xml</include>
			</includes>
		</fileSet>
	</fileSets>
</archetype-descriptor>
