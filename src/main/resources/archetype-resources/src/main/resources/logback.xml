<configuration>

	<!-- Console -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<!-- File -->
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
	    <file>logs/${artifactId}/${artifactId}.log</file>
	    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
	      <!-- rollover daily -->
	      <fileNamePattern>logs/${artifactId}/${artifactId}.log-%d{yyyy-MM-dd}.%i.txt</fileNamePattern>
	      <maxFileSize>10MB</maxFileSize>    
	      <maxHistory>3</maxHistory>
	      <totalSizeCap>30MB</totalSizeCap>
	      <cleanHistoryOnStart>true</cleanHistoryOnStart>
	    </rollingPolicy>
	    <encoder>
	        <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
	    </encoder>
	</appender>
	
	<logger name="${package}" level="INFO" /> 
    <logger name="org.eclipse" level="WARN" /> 

	<logger name="org.reflections.Reflections" level="INFO" />
	<logger name="io.swagger.converter.ModelConverterContextImpl" level="ERROR" />
	<logger name="io.swagger.jaxrs.Reader" level="ERROR" />
	<logger name="io.swagger.jackson.ModelResolver" level="ERROR" />
	<logger name="io.swagger.converter.ModelConverters" level="ERROR" />

	<root level="debug">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>
</configuration>